<div class="row mx-auto">
    {{#if product}}
    <div class="col-sm-12 mx-auto mt-5">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <img src="{{product.imageURL}}" width="80%" height="100%">
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <h1>{{product.name}}</h1>
                        <hr>
                        <h4>{{product.description}}</h4>
                        <br>
                        <form action="/products/addToShopcart/{{user._id}}&{{product._id}}" method="post">
                            <input class="form-control" type="number" name="quantity" placeholder="Quantity">
                            <button type="submit" class="btn btn-lg btn-outline-success btn-block mt-2" style="font-size: larger;color:#4BB543">
                                ${{product.price}}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    {{/if}}
</div>